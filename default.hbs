<!DOCTYPE html>
<html lang="{{@site.locale}}">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="{{asset "css/screen.css"}}" type="text/css" media="screen" />
    <script src="{{asset "js/application.mjs"}}" type="module" defer></script>
    <title>{{#is "home"}}{{@site.title}} &#8211; {{@site.description}}{{else}}{{meta_title}} &#8211; {{@site.title}}{{/is}}</title>
    {{ghost_head}}
</head>
<body class="{{body_class}} flexy">
    <header class="flexy">
        <div class="flexy row">
            {{#if @site.logo}}
            <figure><a href="/" title="{{@site.title}}"><img src="{{@site.logo}}" alt="{{@site.title}}" /></a></figure>
            {{else}}
            <!--div>
                <h1>{{@site.title}}</h1>
                <h2>{{@site.description}}</h2>
            </div-->
            <figure class="rapid-logo"><a href="/" title="{{@site.title}}"><img src="{{asset 'images/rapis-is-logo.png'}}" alt="{{@site.title}}" /></a></figure>
            {{/if}}
            {{navigation}}
            {{search}}
        </div>
    </header>
    {{{body}}}
    {{!-- Show the pagination helper when there's more than one page --}}
    {{#match pagination.pages ">" 1}}{{pagination}}{{/match}}
    <footer class="flexy">
        <section class="flexy row">{{> "global-footer"}}</section>
        <section class="flexy row">
            <p>&copy; 2005 &dash; {{date format="YYYY"}} <a href="{{@site.url}}" title="{{@site.title}} Ltd">{{@site.title}} Ltd</a>&period; All Rights Reserved&period;</p>
            {{navigation type="secondary"}}
        </section>
    </footer>
    {{ghost_foot}}
</body>
</html>