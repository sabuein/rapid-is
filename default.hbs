<!DOCTYPE html>
<!-- default.hbs -->
<html lang="{{@site.locale}}">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="{{asset "css/screen.css"}}" type="text/css" media="screen" />
        <link rel="stylesheet" href="{{asset "css/footer.css"}}" type="text/css" media="screen" />
        <script src="{{asset "js/application.mjs"}}" type="module"></script>
        <title>{{#is "home"}}{{@site.title}} &#8211; {{@site.description}}{{else}}{{meta_title}} &#8211; {{@site.title}}{{/is}}</title>
        {{ghost_head}}
    </head>
    <body class="{{body_class}} flexy">
        {{> "header"}}
        {{> "dialog"}}
        <!-- body -->
        <main id="main-content" class="{{post_class}} flexy" role="main">
            {{{body}}}
        </main>
        {{> "footer"}}
        {{ghost_foot}}
    </body>
</html>