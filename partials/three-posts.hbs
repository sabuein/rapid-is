<!-- three-posts.hbs -->
{{#get "posts" include="authors, tags" filter="featured:true+visibility:public+tag:{{slug}}" order="featured desc, published_at asc" limit="3" as |featured pages|}}{{#if featured}}<section id="featured-posts" class="cards palette flexy row">
    <hgroup class="flexy">
        <h2 id="featured-title" title="Featured">Featured</h2>
    </hgroup>
    <div class="container flexy row">
        {{#foreach featured}}<article class="{{post_class}} flip-card flexy" data-index="{{@index}}">
            <div class="flip-card-inner flexy" tabindex="0">
                <header class="flip-card-front flexy" title="{{title}}">
                    <h3 id="{{slug}}">{{title}}</h3>
                    {{#if feature_image}}<figure class="flexy bg-image" style="background-image: url({{img_url feature_image absolute='true'}});">
                        <img src="{{img_url feature_image absolute='true'}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" title="{{title}}" />
                        {{#if feature_image_caption}}<figcaption>{{feature_image_caption}}</figcaption>{{/if}}
                    </figure>{{/if}}
                </header>
                <p class="flip-card-back flexy" title="{{title}}">
                    {{excerpt words="36"}}
                </p>
            </div>
        </article>{{else}}<p>No posts&excl;</p>{{/foreach}}
        <p class="pagination">Found ({{pages.total}}) featured posts</p>
    </div>
    {{!--<footer class="flexy">
        <a href="#browse-projects" title="Continue" class="shadowed">
            {{> "icons/angle-down"}}
        </a>
    </footer>--}}
</section>{{else}}<p class="get-posts-error">{{error}}</p>{{/if}}{{/get}}