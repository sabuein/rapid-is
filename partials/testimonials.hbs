<!-- testimonials.hbs -->
{{!-- This partial requires a parent positioned relative --}}
<header>
    <h2>Client&apos;s testimonials and reviews&hellip;</h2>
    <p>Read our client&apos;s testimonials and reviews below&period; We are extremely proud of the feedback we have received from our clients over the years&period;</p>
</header>
<div class="testimonials-container disable-scrollbar flexy row">
    {{#get "posts" filter="tag:testimonials+visibility:public" order="title asc" limit=5}}
    {{#foreach posts}}
    <article class="testimonial-review {{post_class}} flexy row" data-testimonial-index="{{@index}}">
        <header class="flexy">
            <h3>{{title}}</h3>
            {{#if feature_image}}<figure>
            <img src="{{img_url feature_image absolute='true'}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" title="{{title}}" />
            </figure>{{/if}}
        </header>
        {{content}}
    </article>
    {{/foreach}}
    {{else}}
    <p class="get-posts-error">{{error}}</p>
    {{/get}}
</div>
<footer class="flexy row">
    <div class="currently-active">&nbsp;</div>
    <div>&nbsp;</div>
    <div>&nbsp;</div>
    <div>&nbsp;</div>
    <div>&nbsp;</div>
</footer>
<a href="#" class="next-testimonial" title="Next&hellip;">
    {{> "icons/angle-down"}}
</a>
<a href="#" class="prev-testimonial" title="Previous&hellip;">
    {{> "icons/angle-down"}}
</a>