<!-- team-members.hbs -->
{{!-- This partial requires a parent positioned relative --}}
<header>
    <h2>Meet our <strong>team&period;</strong></h2>
    <p>Our accomplishments are a reflection of the exceptional talent&comma; expertise&comma; and dedication of our remarkable team members&period; We take great pride in introducing you to our diverse group of professionals&comma; each of whom is united by a common goal&colon; delivering excellence in every aspect of our business&period; Get to know the individuals who make our success possible&period;</p>
</header>
<div class="team-members-container disable-scrollbar flexy row">
    {{#get "posts" filter="tag:hash-team-members+visibility:public" order="title asc" limit=@config.posts_per_page}}
    {{#foreach posts}}
    <article class="team-member {{post_class}} flexy row" data-testimonial-index="{{@index}}">
        <header class="flexy">
            <h3>{{title}}</h3>
            {{#if feature_image}}<figure class="bg-image">
            <img src="{{img_url feature_image absolute='true'}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" title="{{title}}" />
            </figure>{{/if}}
        </header>
        {{content}}
    </article>
    {{/foreach}}
    {{else}}
    <p class="get-posts-error">{{error}}</p>
    {{/get}}
</div>