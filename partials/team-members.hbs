<!-- team-members.hbs -->
{{!-- This partial requires a parent with class "get-testimonials" --}}
<header>
    <h2>Meet our <strong>team&period;</strong></h2>
    <p>From the original open-source software developed in 2015&comma; Rapid is now a team of motivated, creative and hard-working experts&colon;</p>
</header>
<div class="container disable-scrollbar flexy row">
    {{#get "posts" filter="tag:hash-team-members+visibility:public" order="featured desc, published_at asc" limit=@config.posts_per_page}}
    {{#foreach posts}}
    <article class="{{post_class}} flexy row" data-index="{{@index}}">
        <header class="flexy">
            <h3>{{title}}</h3>
            {{#if feature_image}}<figure class="bg-image" style="background-image: url({{img_url feature_image absolute='true'}});">
                <img src="{{img_url feature_image absolute='true'}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" title="{{title}}" />
                {{#if custom_excerpt}}<figcaption>{{custom_excerpt}}</figcaption>{{/if}}
            </figure>{{/if}}
        </header>
        <div>
            {{content}}
        </div>
    </article>
    {{/foreach}}
    {{else}}
    <p class="get-posts-error">{{error}}</p>
    {{/get}}
</div>