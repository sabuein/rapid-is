<!-- vacancies.hbs -->
<section id="check-our-vacancies" class="get-job-vacancies flexy">
    {{!-- This partial requires a parent with class "get-job-vacancies" --}}
    <hgroup>
        <h2>Join our <strong>team&period;</strong></h2>
        <p>Explore jobs at Rapid&period; Whether you&apos;re just starting your career or already have work experience&comma; see for yourself the variety of jobs Rapid has to offer&colon;</p>
    </hgroup>
    <div class="container disable-scrollbar flexy row">
        {{#get "posts" filter="tag:hash-vacancies+visibility:public" order="featured desc, published_at asc" limit=@config.posts_per_page}}
        {{#foreach posts}}
        <article class="{{post_class}} flexy row" data-index="{{@index}}">
            <header class="flexy">
                <h3>{{title}}</h3>
                {{#if feature_image}}<figure class="bg-image" style="background-image: url({{img_url feature_image absolute='true'}});">
                    <img src="{{img_url feature_image absolute='true'}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" title="{{title}}" />
                    {{#if custom_excerpt}}<figcaption>{{custom_excerpt}}</figcaption>{{/if}}
                </figure>{{/if}}
            </header>
            <div>
                {{content}}
            </div>
            <footer>
                <time datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time>
            </footer>
        </article>
        {{else}}
        <p>Thank you for your interest&period; Unfortunately&comma; we are not hiring at this time&period;</p>
        <p>Please check back as we will most certainly be looking for great people to join our team in the future&period;</p>
        {{/foreach}}
        {{else}}
        <p class="get-posts-error">{{error}}</p>
        {{/get}}
    </div>
    <footer class="flexy">
        <a href="#default-footer" title="Continue to the site footer&hellip;">
            {{> "icons/angle-down"}}
        </a>
    </footer>
</section>