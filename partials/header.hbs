<!-- header.hbs -->
<header class="flexy row">
    {{#if @site.logo}}
    <figure class="rapid-logo"><a href="{{@site.url}}" title="{{@site.title}}"><img src="{{@site.logo}}" alt="{{@site.title}}" /></a></figure>
    {{else}}
    {{!--
    <h1>{{@site.title}}</h1>
    <h2>{{@site.description}}</h2>
    --}}
    <figure class="rapid-logo"><a href="{{@site.url}}" title="{{@site.title}}"><img src="{{asset 'images/new-logo.png'}}" alt="{{@site.title}}" /></a></figure>
    {{/if}}
    {{navigation}}
    {{search}}
</header>