{{!< default}}
<!-- custom-solutions.hbs -->
{{#is "post"}}
{{#post}}
<link rel="stylesheet" href="{{asset "css/solutions.css"}}" type="text/css" media="screen" />
<section class="flexy row" data-slug="{{slug}}">
    <hgroup>
        <h1 title="{{title}}">{{title}}</h1>
        <p>Lorem ipsum dolor sit, amet consectetur adipisicing elit. Enim perspiciatis ut magnam ex voluptates illo temporibus explicabo odit veritatis, error blanditiis dolor impedit, reiciendis delectus, molestias sapiente laboriosam recusandae fugit?</p>
    </hgroup>
    <figure>
        <img src="{{feature_image}}" title="{{title}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" />
        <figcaption>{{#if feature_image_caption}}{{feature_image_caption}}{{else}}{{title}}{{/if}}</figcaption>
    </figure>
    <footer class="flexy">
        <a href="#content" title="Continue and learn more&hellip;">
            {{> "icons/angle-down"}}
        </a>
    </footer>
</section>
<section id="content" class="flexy">
    <hgroup>
        <h2 id="{{slug}}-h2" title="{{title}}">{{title}}</h2>
        {{#if excerpt}}<p>{{excerpt}}</p>{{/if}}
    </hgroup>
    {{content}}
    <footer class="flexy">
        {{!-- Show the pagination helper when there's more than one page --}}
        {{#match pagination.pages ">" 1}}{{pagination}}{{/match}}
        {{!-- Previous/next page links - displayed on every page --}}
        {{#if pagination}}{{pagination}}{{/if}}
        {{> "sharing"}}
        <a href="#default-footer" title="Continue to the site footer&hellip;">
            {{> "icons/angle-down"}}
        </a>
    </footer>
</section>
{{/post}}
{{/is}}