{{!< default}}
<!-- custom-solutions.hbs -->
{{#is "post"}}
{{#post}}
<section class="palette flexy row" data-slug="{{slug}}">
    <hgroup class="flexy">
        <h1 id="{{slug}}-outer" title="{{title}}">{{title}}</h1>
        <p>{{#if custom_excerpt}}{{custom_excerpt}}{{else}}{{excerpt words="51"}}{{/if}}</p>
    </hgroup>
    {{#if feature_image}}<figure class="flexy bg-image" style="{{#primary_tag}}{{#if accent_color}}background-color: {{accent_color}}; {{/if}}{{/primary_tag}}background-image: url({{img_url feature_image absolute='true'}});">
        {{#has slug="estates"}}
        {{> "drawings/smart-home"}}
        {{else has slug="communication"}}
        {{> "drawings/texting"}}
        {{else has slug="education-and-welfare"}}
        {{> "drawings/learning"}}
        {{else has slug="billing-system"}}
        {{> "drawings/pay-online"}}
        {{else has slug="safety-and-compliance"}}
        {{> "drawings/the-search"}}
        {{else has slug="housing-inspections-and-compliance"}}
        {{> "drawings/inspection"}}
        {{else has slug="kpi-data-collection-and-reporting"}}
        {{> "drawings/visual-data"}}
        {{else}}
        <img src="{{img_url feature_image absolute='true'}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" title="{{title}}" loading="lazy" />
        {{#if feature_image_caption}}<figcaption>{{feature_image_caption}}</figcaption>{{/if}}
        {{/has}}
    </figure>{{/if}}
</section>
<article id="content" class="palette flexy">
    <p title="Post path">
        <small class="post-path flexy row"><a href="{{@site.url}}" title="{{@site.title}}">{{@site.title}}</a><span>&sol;</span>{{#if primary_tag}}{{#primary_tag}}<a href="{{url}}" title="{{name}}">{{name}}</a><span>&sol;</span>{{/primary_tag}}{{/if}}<a href="{{url}}" title="{{title}}">{{title}}</a></small>
    </p>
    <div class="content-body flexy">
        {{content}}
    </div>
    {{#has tag="solutions"}}{{> "prev-next"}}
    {{> "sharing"}}{{/has}}
    {{#if primary_tag}}{{#primary_tag}}<div class="tag-hash flexy">
        <a href="{{url}}" title="{{name}}" class="flexy"><span>&num;</span><span>{{name}}</span></a>
    </div>{{/primary_tag}}{{/if}}
</article>
{{> "cta-contact"}}
{{/post}}
{{/is}}