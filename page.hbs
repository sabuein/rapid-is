{{!< default}}
<!-- page.hbs -->
{{#is "page"}}
{{#post}}
{{#match @page.show_title_and_feature_image}}
<header class="flexy">
    <section class="title-meta flexy">
        <h1 title="{{title}}">{{title}}</h1>
        {{#if custom_excerpt}}<p>{{custom_excerpt}}</p>{{else}}{{excerpt words="50"}}{{/if}}
    </section>
    {{#if feature_image}}<figure title="{{title}}" style="--this-feature-image: url({{img_url feature_image absolute='true'}})"><img src="{{img_url feature_image absolute='true'}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" /></figure>{{/if}}
    <div class="divider-bottom">
        {{> "icons/divider-wavey"}}
    </div>
</header>
{{/match}}
<section id="content" class="flexy">
    <hgroup>
        <h2 id="{{slug}}-h2" title="{{title}}">{{title}}</h2>
        {{#if excerpt}}<p>{{excerpt}}</p>{{/if}}
    </hgroup>
    {{content}}
    <footer class="flexy">
        {{!-- Show the pagination helper when there's more than one page --}}
        {{#match pagination.pages ">" 1}}{{pagination}}{{/match}}
        {{!-- Previous/next page links - displayed on every page --}}
        {{#if pagination}}{{pagination}}{{/if}}
        {{> "sharing"}}
        <a href="#default-footer" title="Continue to the site footer&hellip;">
            {{> "icons/angle-down"}}
        </a>
    </footer>
</section>
{{/post}}
{{/is}}