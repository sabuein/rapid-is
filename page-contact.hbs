{{!< default}}
<!-- page-contact.hbs -->
{{#is "page"}}
{{#post}}
{{#match @page.show_title_and_feature_image}}<hgroup class="flexy">
    <h1 id="{{slug}}-outer" title="{{title}}">{{title}}</h1>
    <p>{{#if custom_excerpt}}{{custom_excerpt}}{{else}}{{excerpt words="51"}}&hellip;{{/if}}</p>
    <div class="flexy">
        <a href="#content" title="Continue to explore Rapid&apos;s {{slug}} below&hellip;">
            {{> "icons/angle-down"}}
        </a>
    </div>
</hgroup>
{{#if feature_image}}<figure class="flexy bg-image" style="{{#primary_tag}}{{#if accent_color}}background-color: {{accent_color}}; {{/if}}{{/primary_tag}}background-image: url({{img_url feature_image absolute='true'}});">
    <img src="{{img_url feature_image absolute='true'}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" />
    {{#if feature_image_caption}}<figcaption>{{feature_image_caption}}</figcaption>{{/if}}
</figure>{{/if}}{{/match}}
<section id="content" class="flexy row">
    <article class="flexy">
        <header>
            <h1 id="{{slug}}-inner" title="{{title}}">{{title}}</h1>
        </header>
        {{content}}
    </article>
    {{> "form"}}
</section>
<section id="google-map">
    <header>
        <h2>Our location</h2>
    </header>
    <figure class="flexy bg-image" style="background-image: url(https://maps.googleapis.com/maps/api/staticmap?center=51.8014353,-0.197603&format=png&zoom=9&size=700x700&scale=2&maptype=roadmap&style=feature:road.highway%7Celement:geometry%7Cvisibility:simplified%7Ccolor:0xc280e9&style=feature:transit.line%7Cvisibility:simplified%7Ccolor:0xbababa&style=feature:road.highway%7Celement:labels.text.stroke%7Cvisibility:on%7Ccolor:0xb06eba&style=feature:road.highway%7Celement:labels.text.fill%7Cvisibility:on%7Ccolor:0xffffff&markers=icon:{{asset 'images/rapid-ismarker.png'}}|51.80142,-0.196874|alt:Rapid%20Information%20Systems|description:Rapid%20Information%20Systems&key=AIzaSyAyydkwZy7R-3xqU0C10AFDng_JehQ-Gr4);">
        <img src="https://maps.googleapis.com/maps/api/staticmap?center=51.8014353,-0.197603&format=png&zoom=9&size=700x700&scale=2&maptype=roadmap&style=feature:road.highway%7Celement:geometry%7Cvisibility:simplified%7Ccolor:0xc280e9&style=feature:transit.line%7Cvisibility:simplified%7Ccolor:0xbababa&style=feature:road.highway%7Celement:labels.text.stroke%7Cvisibility:on%7Ccolor:0xb06eba&style=feature:road.highway%7Celement:labels.text.fill%7Cvisibility:on%7Ccolor:0xffffff&markers=icon:{{asset 'images/rapid-ismarker.png'}}|51.80142,-0.196874|alt:Rapid%20Information%20Systems|description:Rapid%20Information%20Systems&key=AIzaSyAyydkwZy7R-3xqU0C10AFDng_JehQ-Gr4" alt="A static map from Google showing Rapid's location" title="Our location on Google Maps" />
    </figure>
</section>
{{> "cta-coffee"}}
{{/post}}
{{/is}}