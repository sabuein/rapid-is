{{!< default}}
<!-- tag.hbs -->
{{#is "tag"}}
{{#tag}}
<section class="heading palette flexy row reverse">
    <hgroup class="flexy">
        <h1 id="{{slug}}" title="{{name}}">{{name}}</h1>
        {{#if description}}<p>{{description}}</p>{{else}}A collection of {{plural ../pagination.total empty="zero posts" singular="% post" plural="% posts"}}&period;{{/if}}
    </hgroup>
    {{#if feature_image}}<figure class="flexy bg-image" style="{{#primary_tag}}{{#if accent_color}}background-color: {{accent_color}}; {{/if}}{{/primary_tag}}background-image: url({{img_url feature_image absolute='true'}})">
        <img src="{{img_url feature_image absolute='true'}}" alt="{{title}}" loading="lazy" />
    </figure>{{/if}}
</section>
{{> "featured"}}
<section id="browse-tag" class="palette filters flexy row">
    {{#has slug="projects"}}<hgroup class="flexy row">
        <h6 id="filter-results" title="Filter results">Filter results&colon;</h6>   
        <label for="project-type" title="Please select the project type" class="flexy">Type&colon;<select name="type" id="project-type" size="1" autocomplete="off" required="required">
            <option value="all" selected="selected">All</option>
            <option value="authority">Mobile application</option>
            <option value="authority">Web application</option>
            <option value="authority">Web form</option>
        </select></label>
        <label for="project-area" title="Please select the project area" class="flexy">Area&colon;<select name="area" id="project-area" size="1" autocomplete="off" required="required">
            <option value="all" selected="selected">All</option>
            <option value="barking-and-dagenham">Barking and Dagenham</option>
            <option value="barnet">Barnet</option>
            <option value="bexley">Bexley</option>
            <option value="brent">Brent</option>
            <option value="bromley">Bromley</option>
            <option value="camden">Camden</option>
            <option value="city-of-london">City of London</option>
            <option value="croydon">Croydon</option>
            <option value="ealing">Ealing</option>
            <option value="enfield">Enfield</option>
            <option value="greenwich">Greenwich</option>
            <option value="hackney">Hackney</option>
            <option value="hammersmith-and-fulham">Hammersmith and Fulham</option>
            <option value="haringey">Haringey</option>
            <option value="harrow">Harrow</option>
            <option value="havering">Havering</option>
            <option value="hillingdon">Hillingdon</option>
            <option value="hounslow">Hounslow</option>
            <option value="islington">Islington</option>
            <option value="kensington-and-chelsea">Kensington and Chelsea</option>
            <option value="kingston-upon-thames">Kingston upon Thames</option>
            <option value="lambeth">Lambeth</option>
            <option value="lewisham">Lewisham</option>
            <option value="merton">Merton</option>
            <option value="newham">Newham</option>
            <option value="redbridge">Redbridge</option>
            <option value="richmond-upon-thames">Richmond upon Thames</option>
            <option value="southwark">Southwark</option>
            <option value="sutton">Sutton</option>
            <option value="tower-hamlets">Tower Hamlets</option>
            <option value="waltham-forest">Waltham Forest</option>
            <option value="wandsworth">Wandsworth</option>
            <option value="westminster">Westminster</option>
        </select></label>
    </hgroup>{{/has}}{{/tag}}
    <div class="container disable-scrollbar flexy row">
        {{#foreach posts}}<article class="{{post_class}} flexy row shadowed" data-index="{{@index}}" data-play-state="running" title="{{title}}">
            {{#if feature_image}}<figure class="flexy bg-image" style="{{#primary_tag}}{{#if accent_color}}background-color: {{accent_color}};{{/if}}{{/primary_tag}} background-image: url({{img_url feature_image absolute='true'}})">
                <img src="{{img_url feature_image absolute='true'}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" title="{{title}}" loading="lazy" />
                {{#if feature_image_caption}}<figcaption>{{feature_image_caption}}</figcaption>{{/if}}
            </figure>{{/if}}
            <hgroup class="flexy">
                <h3 id="{{slug}}"><a href="{{url absolute='true'}}" title="{{title}}">{{title}}</a></h3>
                <p>{{#if custom_excerpt}}{{custom_excerpt}}{{else}}{{excerpt words="35"}}{{/if}}</p>
                <a href="{{url absolute='true'}}" title="Learn more" type="text/html" class="flexy shadowed">Learn more</a>
            </hgroup>
        </article>{{else}}<p class="get-posts-error">Error&colon; {{error}}</p>{{/foreach}}
        {{#match pagination.pages ">" 1}}{{pagination}}{{/match}}
    </div>
    {{#tag}}{{> "loop"}}{{/tag}}
</section>
{{/is}}