{{!< default}}
<!-- author.hbs -->
{{#is "author"}}
{{#author}}{{#if cover_image}}<figure>
    <img src="{{img_url cover_image absolute='true'}}" alt="{{name}}'s Picture" title="{{name}}" loading="lazy" onerror="this.style.display = 'none';" />
</figure>{{/if}}
<section class="palette flexy row">
    {{#if profile_image}}<figure>
        <img src="{{img_url profile_image absolute='true'}}" alt="{{name}}'s Picture" title="{{name}}" loading="lazy" onerror="this.style.display = 'none';" />
    </figure>{{/if}}
    <hgroup class="author-profile flexy">
        <h1 class="author-title">{{name}}</h1>
        {{#if bio}}<h2 class="author-bio">{{bio}}</h2>{{/if}}
        {{#if location}}<address title="{{location}}">{{location}}</address>{{/if}}
        <p class="author-meta flexy">
            {{#if website}}<a href="{{website}}" title="Website" target="_blank" rel="noopener">{{readable_url website}}</a>{{/if}}
            <a href="{{url absolute='true'}}">{{readable_url url}}</a>
            {{#if twitter}}<a href="{{twitter_url twitter}}" title="X"  target="_blank" rel="noopener">
                {{> "icons/x"}}
            </a>{{/if}}
            {{#if facebook}}<a href="{{facebook_url facebook}}" title="Facebook" target="_blank" rel="noopener"><img src="{{asset 'images/social/facebook.png'}}" alt="Facebook" loading="lazy" /></a>{{/if}}
        </p>
        <p class="author-fixed flexy">
            <span title="{{plural ../pagination.total empty='No posts' singular='% post' plural='% posts'}}">{{plural ../pagination.total empty="No posts" singular="% post" plural="% posts"}}</span>
        </p>
    </hgroup>
</section>{{/author}}
<section class="author-articles flexy">
    <div class="container disable-scrollbar flexy row">
        {{#foreach posts}}<article class="{{post_class}} flexy row shadowed" data-index="{{@index}}" data-play-state="running" title="{{title}}">
            {{#if feature_image}}<figure class="flexy bg-image" style="{{#primary_tag}}{{#if accent_color}}background-color: {{accent_color}};{{/if}}{{/primary_tag}} background-image: url({{img_url feature_image absolute='true'}})">
                <img src="{{img_url feature_image absolute='true'}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" title="{{title}}" loading="lazy" onerror="this.style.display = 'none';" />
                {{#if feature_image_caption}}<figcaption>{{feature_image_caption}}</figcaption>{{/if}}
            </figure>{{/if}}
            <hgroup class="flexy">
                <h3 id="{{slug}}"><a href="{{url absolute='true'}}" title="{{title}}">{{title}}</a></h3>
                <p>{{#if custom_excerpt}}{{custom_excerpt}}{{else}}{{excerpt words="35"}}{{/if}}</p>
                <a href="{{url absolute='true'}}" title="Learn more" type="text/html" class="flexy shadowed">Learn more</a>
            </hgroup>
        </article>{{else}}<p class="get-posts-error">Error&colon; {{error}}</p>{{/foreach}}
    </div>
    {{#match pagination.pages ">" 1}}{{pagination}}{{/match}}
</section>
{{/is}}