{{!< default}}
<!-- author.hbs -->
{{#is "author"}}
{{#author}}
<header>
    {{#if profile_image}}
    <img src="{{img_url profile_image}}" alt="{{name}}'s Picture" />
    {{/if}}
</header>
<section class="author-profile">
    <h1 class="author-title">{{name}}</h1>
    {{#if bio}}<h2 class="author-bio">{{bio}}</h2>{{/if}}
    <div class="author-meta">
        {{plural ../pagination.total empty='No posts' singular='% post' plural='% posts'}}
    </div>
</section>
{{/author}}
<section class="flexy">
    <div class="container disable-scrollbar flexy row">
        {{#foreach posts}}<article class="{{post_class}} flexy row shadowed" data-index="{{@index}}" data-play-state="running" title="{{title}}">
            {{#if feature_image}}<figure class="flexy bg-image" style="{{#primary_tag}}{{#if accent_color}}background-color: {{accent_color}};{{/if}}{{/primary_tag}} background-image: url({{img_url feature_image absolute='true'}})">
                <img src="{{img_url feature_image absolute='true'}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" title="{{title}}" />
                {{#if custom_excerpt}}<figcaption>{{custom_excerpt}}</figcaption>{{/if}}
            </figure>{{/if}}
            <hgroup class="flexy">
                <h3 id="{{slug}}"><a href="{{url absolute='true'}}" title="{{title}}">{{title}}</a></h3>
                <p>{{#if custom_excerpt}}{{custom_excerpt}}{{else}}{{excerpt words="35"}}{{/if}}</p>
                <a href="{{url absolute='true'}}" title="Learn more" type="text/html" class="flexy shadowed">Learn more</a>
            </hgroup>
        </article>{{else}}<p class="get-posts-error">Error&colon; {{error}}</p>{{/foreach}}
        {{!-- Previous/next page links - displayed on every page --}}
        {{#match pagination.pages ">" 1}}{{pagination}}{{/match}}
    </div>
</section>
<footer>
    {{!-- Show the pagination helper when there's more than one page --}}
    {{#match pagination.pages ">" 1}}{{pagination}}{{/match}}
    {{!-- Previous/next page links - displayed on every page --}}
    {{#if pagination}}{{pagination}}{{/if}}
    <a href="#main-content" title="Back to top" class="shadowed">
        {{> "icons/angle-down"}}
    </a>
</footer>
{{/is}}