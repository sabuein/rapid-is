{{!< default}}
<!-- solutions.hbs -->
{{!-- A custom template for the solutions route --}}
{{#is "tag"}}
{{#tag}}
<header>
    {{#if feature_image}}
    <figure data-type="feature_image">
        <img src="{{feature_image}}" alt="{{name}}" />
    </figure>
    {{/if}}
</header>
<p data-type="url name"><a href="{{url}}" title="{{name}}">{{name}}</a></p>
{{#if description}}
<p data-type="description">{{description}}</p>
{{/if}}
<p data-type="id">{{id}}</p>
<p data-type="slug">{{slug}}</p>
<p data-type="meta_title">{{meta_title}}</p>
<p data-type="meta_description">{{meta_description}}</p>
<div data-type="accent_color">
    <input type="color" value="{{accent_color}}" />
</div>

<section class="rapid-solutions flexy row">
    {{#get "posts" include="tags,authors" filter="primary_tag:{{slug}}" limit="all" order="published_at asc" limit=@config.posts_per_page as |post|}}
    {{#foreach post}}
    <article class="{{#if @even}}even{{else}}odd{{/if}}">
        <h2>{{title}}</h2>
        <p><a href="{{url}}" title="Learn more about Rapid&apos;s {{title}} solutions">Learn more&hellip;</a></p>
    </article>
    {{/foreach}}
    {{/get}}
</section>

{{/tag}}
{{/is}}