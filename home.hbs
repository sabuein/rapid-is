{{!< default}}
<!-- home.hbs -->
{{#is "home"}}
<section class="pre-clients flexy">
    <article class="main-message flexy row">
        <div class="flexy">
            <h1>Integrate your IT systems&comma; get more done&period;</h1>
            <p><a href="#briefly" title="">Rapid</a> simplifies digital transformation&comma; enhancing services&comma; saving costs&comma; and providing structured data for efficiency&comma; accuracy&comma; and AI insights&period;</p>
        </div>
        <figure>
            {{> "drawings/version-control"}}
        </figure>
    </article>
    <article class="five-clients flexy row">
        <h2>Trusted by 30&plus; providers of <a href="#social-housing" title="Social housing">social housing</a>&hellip;</h2>
        <div class="flexy row disable-scrollbar horizontal-scrolling">
            {{#get "posts" filter="tag:hash-clients+visibility:public" order="title asc" limit=@config.posts_per_page}}
            {{#foreach posts}}
            {{#if feature_image}}<figure>
                <img src="{{img_url feature_image absolute='true'}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" title="{{title}}" />
            </figure>{{else}}<pre>{{title}}</pre>{{/if}}
