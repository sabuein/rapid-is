        <a href="/case-studies/" title="Learn more" type="text/html" class="shadowed flexy">Learn more</a>
    </div>
    <footer class="flexy">
        <a href="#client-testimonials" title="Continue" class="shadowed">
            {{> "icons/angle-down"}}
        </a>
    </footer>
</section>{{/has}}{{else}}<p>No content&excl;</p>{{/foreach}}{{else}}<p class="get-posts-error">{{error}}</p>{{/get}}
