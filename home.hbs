{{!< default}}
<!-- home.hbs -->

<!--
    1. Short message + cta
    2. Three products
    3. Who we are
    4. Test
    5. Review
    6. Clients
-->

{{#is "home"}}
{{#get "posts" filter="featured:true+tag:hash-palettes+visibility:public" order="published_at asc" limit="all" as |palettes|}}
{{#foreach palettes}}
{{#has slug="do-more-with-less"}}<section id="main-message" class="{{post_class}} palette flexy row reverse">
    <hgroup class="flexy" title="{{title}}">
        <h1 id="{{slug}}" title="{{title}}">{{title}}</h1>
        <p>{{content}}</p>
    </hgroup>
    {{#if feature_image}}<figure class="flexy bg-image" style="background-image: url({{img_url feature_image absolute='true'}});">
        {{> "drawings/version-control"}}
        <img src="{{img_url feature_image absolute='true'}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" title="{{title}}" />
        {{#if feature_image_caption}}<figcaption>{{feature_image_caption}}</figcaption>{{/if}}
    </figure>{{else}}<figure class="flexy">
        {{> "drawings/version-control"}}
    </figure>{{/if}}
    <footer class="flexy">
        <a href="#more-clients" title="Continue" class="shadowed">
            {{> "icons/angle-down"}}
        </a>
    </footer>
</section>
{{else has slug="trusted-by-30-plus-local-authorities-and-housing-associations"}}<section id="more-clients" class="{{post_class}} palette flexy">
    <hgroup class="flexy" title="{{title}}">
        <h2 id="{{slug}}">{{title}}</h2>
    </hgroup>
    <div class="container flexy row disable-scrollbar horizontal-scrolling" data-play-state="running">
        <figure class="flexy" title="Arhag Housing Association" tabindex="0">
            {{> "clients/arhag"}}
            <figcaption>Arhag Housing Association</figcaption>
        </figure>
        <figure class="flexy" title="Ealing Council" tabindex="0">
            {{> "clients/ealing"}}
            <figcaption>Ealing Council</figcaption>
        </figure>
        <figure class="flexy" title="Westminster City Council" tabindex="0">
            {{> "clients/westminster"}}
            <figcaption>Westminster City Council</figcaption>
        </figure>
        <figure class="flexy" title="Lambeth Council" tabindex="0">
            {{> "clients/lambeth"}}
            <figcaption>Lambeth Council</figcaption>
        </figure>
        <figure class="flexy" title="Islington Council" tabindex="0">
            {{> "clients/islington"}}
            <figcaption>Islington Council</figcaption>
        </figure>
        <figure class="flexy" title="Enfield Council" tabindex="0">
            {{> "clients/enfield"}}
            <figcaption>Enfield Council</figcaption>
        </figure>
        <figure class="flexy" title="Stevenage Borough Council" tabindex="0">
            {{> "clients/stevenage"}}
            <figcaption>Stevenage Borough Council</figcaption>
        </figure>
        <figure class="flexy" title="Camden Council" tabindex="0">
            {{> "clients/camden"}}
            <figcaption>Camden Council</figcaption>
        </figure>
        <figure class="flexy" title="Haringey Council" tabindex="0">
            {{> "clients/haringey"}}
            <figcaption>Haringey Council</figcaption>
        </figure>
    </div>
    <p>{{content}}</p>
    <footer class="flexy">
        <a href="#compliance-app" title="Continue" class="shadowed">
            {{> "icons/angle-down"}}
        </a>
    </footer>
</section>
{{else has slug="streamline-and-enhance-property-compliance"}}<section id="compliance-app" class="{{post_class}} palette flexy row reverse">
    <hgroup class="flexy row" title="{{title}}">
        <h2 id="{{slug}}" title="{{title}}">{{title}}</h2>
        <p>{{content}}</p>
    </hgroup>
    {{#if feature_image}}<figure class="flexy bg-image" style="background-image: url({{img_url feature_image absolute='true'}});">
        <img src="{{img_url feature_image absolute='true'}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" title="{{title}}" />
        {{#if feature_image_caption}}<figcaption>{{feature_image_caption}}</figcaption>{{/if}}
    </figure>{{else}}<figure class="flexy">
        {{> "drawings/mind-map"}}
    </figure>{{/if}}
    <div class="flexy">
        <a href="/solutions/" title="Learn more" type="text/html" class="shadowed flexy">Learn more</a>
    </div>
    <footer class="flexy">
        <a href="#streamlining-safety-checks" title="Continue" class="shadowed">
            {{> "icons/angle-down"}}
        </a>
    </footer>
</section>
{{else has slug="streamlining-safety-checks-repairs-and-complaints"}}<section id="streamlining-safety-checks" class="{{post_class}} palette flexy row reverse">
    <hgroup class="flexy row" title="{{title}}">
        <h2 id="{{slug}}" title="{{title}}">{{title}}</h2>
        <p>{{content}}</p>
    </hgroup>
    {{#if feature_image}}<figure class="flexy bg-image" style="background-image: url({{img_url feature_image absolute='true'}});">
